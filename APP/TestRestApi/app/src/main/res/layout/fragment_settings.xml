<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    tools:context=".SettingsFragment">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/rcview"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/imagecost"
            android:layout_width="96dp"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="151dp"
            android:background="@drawable/home" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="22dp"
            android:gravity="left"
            android:text="Cost:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/wifiname"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="22dp"
            android:gravity="left"
            android:text="Wifi Name:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/wifipass"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="22dp"
            android:gravity="left"
            android:text="Wifi Pass:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/d1thresh"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="22dp"
            android:gravity="left"
            android:text="Device 1 Threshold:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/d2thresh"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="22dp"
            android:gravity="left"
            android:text="Device 2 Threshold:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/d3thresh"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="22dp"
            android:gravity="left"
            android:text="Device 3 Threshold:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/d4thresh"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="400dp"
            android:layout_marginRight="22dp"
            android:gravity="left"
            android:text="Device 4 Threshold:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>

</FrameLayout>